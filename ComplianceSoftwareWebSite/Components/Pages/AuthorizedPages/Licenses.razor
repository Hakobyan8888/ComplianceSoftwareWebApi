@page "/Licenses"
@using ComplianceSoftwareWebSite.Components.Pages.Authentication
@using Microsoft.AspNetCore.Components.Authorization
<h3>Licenses</h3>

<AuthorizeComponent>
    <div class="license-item-list-container">
        <table class="license-item-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Assigned To</th>
                    <th>State</th>
                    <th>Area Path</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in LicenseModels)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            @* <span class="license-item-icon">@item.Icon</span> *@
                            @item.Title
                        </td>
                        <td>
                            @* <span class="assigned-to-icon"><img src="@item.AssignedToIcon" alt="icon" /></span> *@
                            @item.UploadedByEmail
                        </td>
                        <td>
                            <span class="state-indicator"></span>
                            @item.Content
                        </td>
                        <td>@item.CreatedDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</AuthorizeComponent>