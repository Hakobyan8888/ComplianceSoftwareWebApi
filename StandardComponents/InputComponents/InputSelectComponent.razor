@using Microsoft.AspNetCore.Components.Forms
@typeparam TItem
<div class="form-group form-item-group">
    <label for="@Id">@Label</label>
    <InputSelect id="@Id" @bind-Value="Value" class="form-control input-input">
        @if (typeof(TItem) == typeof(string))
        {
            @foreach (var option in Options)
            {
                <option value="@option">@option</option>
            }
        }
        else
        {
            @foreach (var option in Options)
            {
                if (option == null) continue;
                <option value="@option.ToString()">@(option.ToString())</option>
            }
        }
    </InputSelect>
    <ValidationMessage For="@(() => Value)" class="validation-message input-validation" />
</div>

